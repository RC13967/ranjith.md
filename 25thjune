var xhr = new XMLHttpRequest();
xhr.open("GET", "https://restcountries.eu/rest/v2/all");
xhr.onload = function () {
  var data = JSON.parse(this.response);
 var t= data.filter(function(x) {
   return x.region == "Asia";
 }).map(function(y) {
   return y.name;
 });
 console.log(t);
}
xhr.send();
